<nav class="user-nav" >
  <a class="user-nav__link" href="/purchase-portal">Purchase Portal</a>
  <a class="user-nav__link" href="/profile">Profile</a>
</nav>
<div class="user-container">
   {{#if errorMessage}}
  <div class="text-bg-danger p-3 my-2 w-100 text-center">{{errorMessage}}</div>
  {{/if}}
<section class="requested-purchases">
  <h4 class="requested-purchases__title">Purchase requests</h3>
  <div class="request-purchases__list">
  <p class="collapse-container">
  <a
    class="btn 
    {{#if (isPending purchaseRequest)}}
    btn-warning 
    {{else if (isApproved purchaseRequest)}}
    btn-success
    {{else}}
    btn-danger
    {{/if}}
    collapse-container__btn"
    data-bs-toggle="collapse"
    role="button"
    aria-expanded="true"
    style="width: 90%"
  >
   Editing
  </a>

</p>
<div class="collapse collapse-container__inside show">
  <div class="card card-body">
    <form
      class="purchase-request-edit-form"
      action="/purchase-portal/edit-purchase/{{purchaseRequest._id}}"
      method="post"
    >
     <div class="form-floating mb-3 purchase-request-edit-form__floating-input-container">
      <input type="text" name="item" class="form-control" id="floatingInputItem" placeholder="Item" value="{{purchaseRequest.item}}">
      <label for="floatingInputItem">Item</label>
      </div>
      <div class="form-floating mb-3 purchase-request-edit-form__floating-input-container">
      <input type="number" name="cost" class="form-control" id="floatingInputCost" placeholder="Cost" value="{{purchaseRequest.cost}}">
      <label for="floatingInputCost">Cost</label>
      </div>
      <div class="form-floating mb-3 purchase-request-edit-form__floating-input-container">
      <textarea class="form-control" placeholder="Reason for request" id="floatingTextarea" name="reason" id="reason" style="height: 75px;">{{purchaseRequest.reason}}</textarea>
      <label for="floatingInputCost">Reason for request</label>
      </div>
      <label for="requestedBy">
      <strong>Requested by:</strong> <output name="name" id="requestedBy">{{purchaseRequest.createdBy.firstName}} {{purchaseRequest.createdBy.lastName}}</output>
      <input name="id" type="hidden" value="{{purchaseRequest._id}}">
      <div>
       <input type="submit" value="Save Changes" class="btn btn-success purchase-request-edit-form__btn">
       <a href="/purchase-portal" class="btn btn-danger purchase-request-edit-form__btn">Cancel</a>

      </div>
      </label>
    </form>
  </div>
</div>
  </div>
</section>
</div>
