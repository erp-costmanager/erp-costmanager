<div class="login-container">
  {{#if errorMessage}}
    <div
      class="text-bg-danger p-3 my-2 w-100 text-center"
    >{{errorMessage}}</div>
  {{/if}}
  <form class="login-container__form" action="/login" method="post">
    <label class="login-container__form__label" for="email">Email</label>
    <input type="email" name="email" id="email" />
    <label class="login-container__form__label" for="password">Password</label>
    <input type="password" name="password" id="password" required />
    <button class="login-container__form__log-in-button">Log in</button>
  </form>

  <p class="login-container__signup-question">Don't have an account yet?</p>

  <a
    href="/userSignup"
    class="login-container__signup-link"
    type="button"
  >Create a new account</a>
</div>