<div class="signup-container bg-secondary">
  <h2 class="text-light text-center w-75">Set up a <span class="text-warning">new</span> user</h2>
  {{#if errorMessage}}
    <div
      class="text-bg-danger p-3 my-2 w-100 text-center"
    >{{errorMessage}}</div>
  {{/if}}
  <div class="card card-body m-3 bg-info">
    <form class="signup-container__form" action="/userSignup" method="post">
      <div class="form-floating mb-2" for="company">
        <input type="text" id="floatingInput" class="form-control" name="company"  aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" placeholder="Company" />
        <label for="floatingInput">Company</label>
      </div>
      <div class="form-floating mb-2" for="company">
        <input type="email" id="floatingInput" class="form-control" name="email"  aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" placeholder="Email" />
        <label for="floatingInput">Email</label>
      </div>
      <div class="form-floating mb-2" for="company">
        <input type="text" id="floatingInput" class="form-control" name="firstName"  aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" placeholder="First name" />
        <label for="floatingInput">First name</label>
      </div>
      <div class="form-floating mb-2" for="company">
        <input type="text" id="floatingInput" class="form-control" name="lastName"  aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" placeholder="Last name" />
        <label for="floatingInput">Last name</label>
      </div>
      <div class="form-floating mb-2" for="company">
        <input type="password" id="floatingInput" class="form-control" name="password"  aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" placeholder="Password" />
        <label for="floatingInput">Password</label>
      </div>
      <div class="form-floating mb-2" for="company">
        <input type="password" id="floatingInput" class="form-control" name="verifyPassword"  aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" placeholder="Confirm Password" />
        <label for="floatingInput">Confirm Password</label>
      </div>
      <button class="signup-container__form__log-in-button">Sign up</button>
    </form>
    <p class="text-center text-light mb-2">Already have an account?</p>
    <a href="/login" class="text-warning text-center" type="button">
      <i
        class="fas fa-right-to-bracket"
      ></i><span class="ms-2">Log in</span></a>
  </div>
</div>