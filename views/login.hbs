<div class="login-container">

  <form class="login-container__form" action="/login" method="get">
    <label class="login-container__form__label" for="company">Company</label>
    <input type="text" name="company" id="company" />
    <label class="login-container__form__label" for="email">Email</label>
    <input type="email" name="email" id="email" />
    <label class="login-container__form__label" for="firstName">First name</label>
    <input type="text" name="firstName" id="firstName" />
    <label class="login-container__form__label" for="lastName">Last name</label>
    <input type="text" name="lastName" id="lastName" />
    <label class="login-container__form__label" for="password">Password</label>
    <input type="password" name="password" id="password" />
    <button class="login-container__form__log-in-button">Log in</button>
  </form>

  <p class="login-container__signup-question">Don't have an account yet?</p>

  <a class="login-container__signup-link" type="button">Create a new account</a>
</div>